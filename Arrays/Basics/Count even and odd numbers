class Main {
    public static void main(String[] args) {
        int arr[] = {1, 5, 4, 7, 9};
        int evencount = 0;
        int oddcount =0;
        for (int i = 0; i <= arr.length-1; i++){
            if(arr[i] % 2 == 0){
                evencount++;  
            }else{
                oddcount++;
            }    
        }
        System.out.println("The number is even" + " " + evencount);
        System.out.println("The number is odd"+ " "+ oddcount);
    }
}
